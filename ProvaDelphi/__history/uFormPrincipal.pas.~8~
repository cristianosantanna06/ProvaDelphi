unit uFormPrincipal;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, Vcl.Menus, ufTarefa1;

type
  TFormPrincipal = class(TForm)
    MainMenuTarefas: TMainMenu;
    arefa11: TMenuItem;
    Tarefa12: TMenuItem;
    arefa21: TMenuItem;
    arefa31: TMenuItem;
    procedure Tarefa12Click(Sender: TObject);
     procedure CriarFormulario(pNomeFormulario : TForm; pClasseForm : TComponentClass);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  FormPrincipal: TFormPrincipal;

implementation

{$R *.dfm}

procedure TFormPrincipal.CriarFormulario(pNomeFormulario: TForm;
  pClasseForm: TComponentClass);
begin
   Application.CreateForm(pClasseForm, pNomeFormulario);
   pNomeFormulario.ShowModal;
end;

procedure TFormPrincipal.Tarefa12Click(Sender: TObject);
begin
  CriarFormulario(ufTarefa1);
end;


end.
